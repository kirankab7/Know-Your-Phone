<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="8dp"
    android:background="?android:attr/selectableItemBackground">

    <TextView
        android:id="@+id/sensorNameTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Name"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/sensorTypeTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Type"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/sensorVendorTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Vendor"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/sensorVersionTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Version"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/sensorMaxRangeTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Max Range"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/sensorResolutionTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Resolution"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/sensorPowerTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Power"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/sensorMinDelayTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Min Delay"
        android:textSize="16sp" />
</LinearLayout>
